<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>BrightWorks Solutions</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background: #f7f4f4;
      font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .btn-custom {
      font-weight: 500;
      border-radius: 50px;
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .btn-custom:hover {
      transform: scale(1.08);
      filter: brightness(0.9) blur(0.6px);
    }

    .btn-home {
      background-color: #000000;
      color: #ffffff;
      border: none;
    }

    .btn-home:hover {
      background-color: #6f42c1;
      color: #ffffff;
    }

    .carousel img {
      max-height: 400px;
      object-fit: cover;
      border-radius: 20px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
      filter: invert(100%);
      width: 3rem;
      height: 3rem;
    }

    .shadow-card {
      border-radius: 1rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      background: white;
      transition: transform 0.3s ease;
    }

    .shadow-card:hover {
      transform: scale(1.01);
    }

    .form-control,
    textarea {
      border-radius: 0.6rem;
      width: 100%;
      transition: box-shadow 0.2s ease;
    }

    .form-control:hover,
    textarea:hover {
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    }

    .table th,
    .table td {
      vertical-align: middle;
      background: #ffffff;
      border-radius: 0.4rem;
    }

    .btn-dark:hover {
      background-color: #2c168f;
    }

    .navbar-brand,
    .btn,
    .table tbody tr {
      transition: transform 0.3s ease;
    }

    .navbar-brand:hover,
    .btn:hover,
    .table tbody tr:hover {
      transform: scale(1.05);
    }

    /* Popup styles */
    .popup-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(15, 15, 15, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .white-overlay {
      background: rgba(255, 255, 255, 0) !important;
    }

    .popup-box {
      position: relative;
      width: 90%;
      max-width: 600px;
      background: rgb(255, 255, 255);
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .popup-frame {
      width: 100%;
      height: 600px;
      border: none;
      border-radius: 12px;
    }

    .popup-close {
      position: absolute;
      top: 5px;
      right: 10px;
      background: #dc3545;
      color: rgba(255, 255, 255, 0);
      border: none;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      font-size: 20px;
      line-height: 30px;
      text-align: center;
      cursor: pointer;
      z-index: 10000;
    }

    .d-none {
      display: none !important;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg bg-white sticky-top">
    <div class="container d-flex justify-content-between align-items-center py-2">
      <a class="navbar-brand d-flex align-items-center" href="#">
        <i class="bi bi-buildings fs-2 text-primary me-2"></i>
        <strong>BrightWorks</strong>
      </a>
      <form class="mx-auto">
        <input class="form-control rounded-pill px-4" type="search" placeholder="Search..." style="background-color: #ffffff; min-width: 150px; max-width: 400px" />
      </form>
      <div class="ms-auto d-flex gap-2">
        <a href="index" class="btn btn-custom btn-home rounded-pill">Home</a>
        <a href="https://teams.live.com/v2" target="_blank" class="btn btn-custom btn-warning">Team</a>
        <a href="contact" target="_blank" class="btn btn-custom btn-success">Contact</a>
        <a href="register" class="btn btn-outline-success btn-sm" style="border-radius:50px;">Register</a>
        <a href="/" class="btn btn-outline-primary btn-sm" style="border-radius:50px;">Login</a>
      </div>
    </div>
  </nav>

  <!-- WELCOME -->
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Welcome to BrightWorks Solutions</h1>

    <!-- WHY CHOOSE US -->
    <div class="card mb-5 shadow-card p-4">
      <h5 class="card-title">Why Choose Us?</h5>
      <p class="card-text">We craft tailored business solutions for startups and professionals. Whether it's design, development, or strategy, our team delivers results that matter.</p>
    </div>

    <!-- CAROUSEL -->
    <div id="projectCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#projectCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#projectCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#projectCarousel" data-bs-slide-to="2"></button>
      </div>
      <div class="carousel-inner shadow-card">
        <div class="carousel-item active">
          <img src="https://images.pexels.com/photos/3183197/pexels-photo-3183197.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=1280" class="d-block w-100" alt="Team Discussion" />
        </div>
        <div class="carousel-item">
          <img src="https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=1280" class="d-block w-100" alt="Client Meeting" />
        </div>
        <div class="carousel-item">
          <img src="https://images.pexels.com/photos/3182763/pexels-photo-3182763.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=1280" class="d-block w-100" alt="Workspace" />
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!-- CONTACT FORM -->
    <h3 class="mb-3">Drop Us a Message</h3>
    <form onsubmit="showAlert(event)" id="contactForm" class="shadow-card p-4" style="background: linear-gradient(to bottom, #f0f0f0, #b6b1b1)">
      <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" placeholder="Enter your name" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Email address</label>
        <input type="email" class="form-control" placeholder="Enter your email" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Message</label>
        <textarea class="form-control" rows="3" placeholder="Enter your feedback" required></textarea>
      </div>
      <button type="submit" class="btn btn-dark px-4">Send</button>
    </form>

    <!-- TEAM DIRECTORY -->
    <h3 class="mt-5 mb-3">Team Directory</h3>
    <div class="table-responsive">
      <table class="table table-hover table-borderless">
        <thead class="table-dark">
          <tr>
            <th style="color:black">#</th>
            <th style="color:black">Full Name</th>
            <th style="color:black">Email</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Atharva Wagh</td>
            <td>atharva@xxxxx.com</td>
          </tr>
          <tr>
            <td>2</td>
            <td>Vijay Mallya</td>
            <td>mallya@xxxxx.com</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- LOGIN POPUP -->
  <div id="loginPopup" class="popup-overlay d-none">
    <div class="popup-box">
      <iframe src="login.html" class="popup-frame"></iframe>
      <button class="popup-close" onclick="hidePopup('loginPopup')">×</button>
    </div>
  </div>

  <!-- REGISTER POPUP -->
  <div id="registerPopup" class="popup-overlay d-none">
    <div class="popup-box">
      <iframe src="register.html" class="popup-frame"></iframe>
      <button class="popup-close" onclick="hidePopup('registerPopup')">×</button>
    </div>
  </div>

  <!-- Toast Notification -->
  <div id="loginToast" class="toast align-items-center text-bg-success border-0 position-fixed bottom-0 end-0 m-4" role="alert" aria-live="assertive" aria-atomic="true" style="z-index:9999;display:none;min-width:220px;">
    <div class="d-flex">
      <div class="toast-body">
        Login successful!
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>

  <!-- FOOTER -->
  <footer class="bg-dark text-white text-center p-3 mt-5" style="font-family: serif; font-size: 20px">
    &copy; 2025 BrightWorks Solutions. All rights reserved.
  </footer>

  <!-- SCRIPTS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.addEventListener("message", function (event) {
  if (event.data === "openLoginPopup") {
    hidePopup("registerPopup");
    showPopup("loginPopup");
  } else if (event.data === "openRegisterPopup") {
    hidePopup("loginPopup");
    showPopup("registerPopup");
  }
});

    window.addEventListener("message", function (event) {
  if (event.data === "openRegisterPopup") {
    hidePopup("loginPopup");
    showPopup("registerPopup");
  }
});

    function showAlert(e) {
      e.preventDefault();
      alert("Thanks for reaching out! We'll get back to you shortly.");
      document.getElementById("contactForm").reset();
    }

    function showPopup(id) {
      const popup = document.getElementById(id);
      document.getElementById("loginPopup").classList.remove("white-overlay");
      document.getElementById("registerPopup").classList.remove("white-overlay");
      if (id === "registerPopup") {
        popup.classList.add("white-overlay");
      }
      popup.classList.remove("d-none");
    }

    function hidePopup(id) {
      document.getElementById(id).classList.add("d-none");
    }

    // Handle close request from inside register.html iframe
    window.addEventListener("message", function (event) {
      if (event.data === "closeRegisterPopup") {
        hidePopup("registerPopup");
      }
    });

    // Show login success toast if redirected after login
    if (sessionStorage.getItem('loginSuccess')) {
      var toastEl = document.getElementById('loginToast');
      toastEl.style.display = 'block';
      var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
      toast.show();
      sessionStorage.removeItem('loginSuccess');
    }
  </script>
</body>
</html>